<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:background="@color/bg_app"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Historial de Gastos"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_main"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_item_rounded"
                android:backgroundTint="@color/surface_card"
                android:hint="Buscar comercio o concepto"
                android:textColorHint="@color/text_secondary"
                android:textColor="@color/text_main"
                android:paddingHorizontal="16dp"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawableTint="@color/text_secondary"
                android:drawablePadding="12dp"
                android:layout_marginBottom="12dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFechas"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fechas"
                        app:chipIcon="@android:drawable/ic_menu_my_calendar"
                        android:layout_marginEnd="8dp"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCategoria"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categoría"
                        app:chipIcon="@android:drawable/ic_menu_sort_by_size"
                        android:layout_marginEnd="8dp"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipEstado"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado"
                        app:chipIcon="@android:drawable/ic_menu_info_details"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerHistorial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="100dp"
            android:paddingTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnMainAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escanear"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/primary_blue"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconTint="@color/white"
            android:layout_marginEnd="16dp"
            android:contentDescription="Acción Principal" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnModeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/surface_card"
            app:tint="@color/primary_blue"
            app:fabSize="mini"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Modo Selección" />

    </LinearLayout>

</FrameLayout>

